<?xml version="1.0" encoding="utf-8"?><!--未缴费账单——view-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/pm_none_swf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pm_none_rel_menu">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pm_none_recy"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/lin_null"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            android:layout_width="136dp"
            android:layout_height="96dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_100"
            android:src="@mipmap/ic_null_order"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无账单"
            android:textSize="@dimen/textSize_15sp"
            android:textColor="@color/color_444444"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pm_none_rel_menu"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <View
            android:background="@color/background_underline_color"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:background="#FFFFFF"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <LinearLayout
                android:id="@+id/pm_whole"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/shopcar_check_all"
                    android:src="@drawable/nava_pay_select"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />
                <TextView
                    android:text="全选"
                    android:textSize="16sp"
                    android:layout_marginLeft="18px"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:drawablePadding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:paddingLeft="18px"
                android:paddingRight="18px"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent">
                <TextView
                    android:text="合计："
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/pm_none_amount"
                    android:text="￥0.0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/pm_merge"
                    android:text="合并支付"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>