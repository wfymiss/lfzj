<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_visitor_photo"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/number_open"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_pwd_v" />

        <TextView
            android:id="@+id/open_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@id/iv_visitor_photo"
            android:text="申请时间:"
            android:textColor="@color/color_3e3e3e"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_open_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@id/open_time_title"
            android:text="2017-8-10 10:00"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/vaild_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/open_time_title"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_visitor_photo"
            android:text="有效时间:"
            android:textColor="@color/color_3e3e3e"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_vaild_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_open_time"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/vaild_time_title"
            android:text="3分钟"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/number_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vaild_time_title"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_visitor_photo"
            android:text="有效次数:"
            android:textColor="@color/color_3e3e3e"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_number_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_vaild_time"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/number_open"
            android:text="2次"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/color_999999" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px">

        <TextView
            android:id="@+id/object_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="对象："
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/object_title"
            android:text="家人老妈"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/success_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/tv_success"
            android:text="手机号:"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>
</LinearLayout>