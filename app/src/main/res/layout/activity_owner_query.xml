<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    android:id="@+id/layout_owner"
   tools:context=".property.activity.OwnerQueryActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/owner_query_toolbar"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="业主"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择用户楼号"
        android:layout_marginTop="@dimen/margin_30dp"
        android:textSize="@dimen/textSize_15sp"
        android:layout_marginLeft="@dimen/dp_20"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_15sp"
        android:hint="请选择楼号"
        android:layout_marginTop="@dimen/margin_10dp"
        android:paddingBottom="@dimen/margin_15dp"
        android:paddingTop="@dimen/margin_15dp"
        android:drawableRight="@drawable/ic_arrow_right"
        android:paddingRight="@dimen/margin_10dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:id="@+id/tv_select_building"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择单元号"
        android:layout_marginTop="@dimen/margin_10dp"
        android:textSize="@dimen/textSize_15sp"
        android:layout_marginLeft="@dimen/dp_20"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_15sp"
        android:hint="请选择单元号"
        android:layout_marginTop="@dimen/margin_10dp"
        android:paddingBottom="@dimen/margin_15dp"
        android:paddingTop="@dimen/margin_15dp"
        android:drawableRight="@drawable/ic_arrow_right"
        android:paddingRight="@dimen/margin_10dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:id="@+id/tv_select_unit"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择房间号"
        android:layout_marginTop="@dimen/margin_10dp"
        android:textSize="@dimen/textSize_15sp"
        android:layout_marginLeft="@dimen/dp_20"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_15sp"
        android:hint="请选择房间号"
        android:layout_marginTop="@dimen/margin_10dp"
        android:paddingBottom="@dimen/margin_15dp"
        android:paddingTop="@dimen/margin_15dp"
        android:drawableRight="@drawable/ic_arrow_right"
        android:paddingRight="@dimen/margin_10dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:id="@+id/tv_select_room"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="@dimen/textSize_16sp"
        android:textColor="#ffffff"
        android:background="@drawable/shape_repair_blue"
        android:text="确认"
        android:id="@+id/brn_confirm"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/margin_10dp"/>
</LinearLayout>
