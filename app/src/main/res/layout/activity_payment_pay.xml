<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/include_title_text"
        android:id="@+id/title"/>
    <ScrollView
        android:layout_below="@+id/title"
        android:layout_above="@+id/order_under_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#f9f8f8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/payment_charge_title"
                    android:text="支付金额："
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/payment_charge"
                    android:text="￥0.0"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <View
                android:background="@color/background_underlineview_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"/>
            <RelativeLayout
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/payment_name_title"
                    android:text="业主姓名："
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/payment_name"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/gray_dark"
                    android:layout_toRightOf="@id/payment_name_title"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/devider_1"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@color/background_underline_color"
                    android:layout_below="@+id/payment_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"/>
                <TextView
                    android:id="@+id/tv_house_num"
                    android:layout_below="@+id/devider_1"
                    android:text="业主房间："
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_house_id"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/gray_dark"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_toRightOf="@id/tv_house_num"
                    android:layout_below="@+id/devider_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="@color/background_underlineview_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"/>
            <RelativeLayout
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/charge_name_title"
                    android:text="账单名称："
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/charge_name"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/gray_dark"
                    android:layout_toRightOf="@id/charge_name_title"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/devider_2"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@color/background_underline_color"
                    android:layout_below="@+id/charge_name_title"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>
                <TextView
                    android:id="@+id/charge_description_title"
                    android:text="账单说明："
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:layout_below="@+id/devider_2"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/charge_description"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/gray_dark"
                    android:layout_toRightOf="@id/charge_description_title"
                    android:layout_below="@+id/devider_2"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/devider_3"
                    android:background="@color/background_underline_color"
                    android:layout_below="@+id/charge_description"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>
                <TextView
                    android:id="@+id/start_time"
                    android:text="开始日期："
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:layout_below="@+id/devider_3"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_start_time"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/gray_dark"
                    android:layout_toRightOf="@+id/start_time"
                    android:layout_below="@+id/devider_3"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/devider_4"
                    android:background="@color/background_underline_color"
                    android:layout_below="@+id/start_time"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>
                <TextView
                    android:id="@+id/end_time"
                    android:text="截止日期："
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:layout_below="@+id/devider_4"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_end_time"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/gray_dark"
                    android:layout_below="@+id/devider_4"
                    android:layout_toRightOf="@+id/end_time"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/devider_5"
                    android:background="@color/background_underline_color"
                    android:layout_below="@+id/end_time"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>
                <TextView
                    android:id="@+id/charge_num"
                    android:text="账单编号："
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:layout_below="@+id/devider_5"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_charge_num"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/gray_dark"
                    android:layout_toRightOf="@+id/end_time"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_below="@+id/devider_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <FrameLayout
                    android:id="@+id/payment_pair_fram"
                    android:visibility="gone"
                    android:layout_marginTop="38dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/payment_paid_wm"
                        android:layout_gravity="center"
                        android:src="@mipmap/watermark_paid"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_width="160dp"
                        android:layout_height="160dp" />
                </FrameLayout>
            </RelativeLayout>
            <View
                android:background="@color/background_underlineview_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"/>
            <RelativeLayout
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/re_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_discount_title"
                        android:text="选择折扣："
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/iv_right"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/point_icon_gray"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />
                    <TextView
                        android:text="暂无折扣"
                        android:textSize="@dimen/sp_15"
                        android:id="@+id/tv_discount"
                        android:textColor="@color/text_gray"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/iv_right"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <View
                    android:id="@+id/devider_6"
                    android:background="@color/background_underline_color"
                    android:layout_below="@+id/re_discount"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>
                <TextView
                    android:id="@+id/sum"
                    android:text="合计："
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:layout_toLeftOf="@+id/tv_charge"
                    android:layout_below="@+id/devider_6"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_charge"
                    android:text="￥0.0"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/devider_6"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/bill_pay_lay"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="支付方式"
                    android:textSize="@dimen/sp_15"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:background="@color/gray_light"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_13sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="*如需要发票，请在本月月底之前至物业收费办公室领取"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/order_under_menu"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:id="@+id/order_pay_commit"
            android:text="去支付"
            android:textSize="@dimen/sp_15"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_50"/>
        <TextView
            android:id="@+id/order_pay_amount"
            android:text="实付款：￥"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/order_pay_commit"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
