<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/ic_login_back"
    tools:context="com.ovov.lfzj.login.RegisterActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <ImageView
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_87"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_logo_appname"/>
    <ImageView
        android:layout_width="@dimen/dp_265"
        android:layout_height="@dimen/dp_26"
        android:src="@mipmap/ic_login_text"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_login_edit"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginRight="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_30">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_phone"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="@string/edit_phone_hint"
            android:textColor="@color/color_444444"
            android:background="#00000000"
            android:id="@+id/et_phone"
            android:textSize="@dimen/textSize_12sp"
            android:inputType="phone"
            android:layout_marginLeft="@dimen/dp_18"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginRight="@dimen/dp_48"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/shape_login_edit"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_verify"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="@string/edit_verify_hint"
                android:textColor="@color/color_444444"
                android:background="#00000000"
                android:textSize="@dimen/textSize_12sp"
                android:id="@+id/et_verify"
                android:inputType="number"
                android:layout_marginLeft="@dimen/dp_18"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_get_verify"
            android:textColor="@color/color_ffffff"
            android:layout_marginLeft="@dimen/dp_15"
            android:singleLine="true"
            android:id="@+id/tv_get_code"
            android:background="@drawable/shape_verify_text"
            android:padding="@dimen/dp_5"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_login_edit"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginRight="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_15">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_pwd"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="@string/edit_pwd_hint"
            android:textColor="@color/color_444444"
            android:background="#00000000"
            android:textSize="@dimen/textSize_12sp"
            android:id="@+id/et_pwd"
            android:inputType="textPassword"
            android:layout_marginLeft="@dimen/dp_18"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_login_edit"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginRight="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_15">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_pwd"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="@string/text_confirm_pwd"
            android:textColor="@color/color_444444"
            android:background="#00000000"
            android:textSize="@dimen/textSize_12sp"
            android:id="@+id/et_confirm"
            android:inputType="textPassword"
            android:layout_marginLeft="@dimen/dp_18"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_login_edit"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginRight="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_15">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_recommend_owner"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="请输入推荐人手机号(选填)"
            android:textColor="@color/color_444444"
            android:background="#00000000"
            android:textSize="@dimen/textSize_12sp"
            android:id="@+id/et_recommend"
            android:inputType="phone"
            android:layout_marginLeft="@dimen/dp_18"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/common_complete"
        android:textSize="@dimen/common_text_size_big"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_100"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:background="@drawable/shape_radius_5"
        android:gravity="center"
        android:id="@+id/tv_register"
        android:textColor="@color/color_ffffff"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
