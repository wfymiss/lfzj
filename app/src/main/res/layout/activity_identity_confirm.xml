<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_identity_confirm_bg"
    tools:context="com.ovov.lfzj.login.IdentityConfirmActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_48"
                android:layout_marginRight="@dimen/dp_48"
                android:layout_marginTop="235dp"
                android:background="@drawable/shape_login_edit"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/ic_phone" />

                <TextView
                    android:id="@+id/et_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:textSize="@dimen/sp_15"
                    android:inputType="phone"
                    android:textColor="@color/color_444444" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_48"
                android:layout_marginRight="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/shape_login_edit"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/ic_verify" />

                <EditText
                    android:id="@+id/et_verify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:background="#00000000"
                    android:hint="@string/edit_verify_hint"
                    android:textSize="@dimen/sp_15"
                    android:inputType="number"
                    android:textColor="@color/color_444444" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_get_verify"
                android:textColor="@color/color_ffffff"
                android:background="@drawable/shape_next_text"
                android:paddingBottom="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_48"
                android:layout_marginRight="@dimen/dp_48"
                android:textSize="@dimen/sp_17"
                android:id="@+id/tv_get_code"
                android:layout_marginTop="160dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_no_confirm"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_444444"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_25"
                android:id="@+id/tv_no_confirm"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
