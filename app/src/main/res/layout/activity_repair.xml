<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/repair_room_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/include_title_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="#edebeb"
                android:gravity="center">

                <TextView
                    android:id="@+id/repair_category_indoor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/repair_select_indoor_title"
                    android:gravity="center"
                    android:text="入室维修"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    android:textColor="@drawable/repair_select_text_color"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/repair_category_outdoor"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@drawable/repair_select_indoor_title"
                    android:gravity="center"
                    android:text="公共维修"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:textColor="@drawable/repair_select_text_color"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/background_underline_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人：    "
                    android:textColor="#686565"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/repair_person"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@null"
                    android:hint="请输入联系人姓名"
                    android:textColor="#080604"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/background_underline_color" />

            <LinearLayout
                android:id="@+id/repair_lay_room"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式："
                    android:textColor="#686565"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/repair_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@null"
                    android:hint="请输入联系人电话"
                    android:inputType="phone"
                    android:textColor="#080604"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/background_underline_color" />

            <LinearLayout
                android:id="@+id/repair_lay_out"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修地址："
                    android:textColor="#686565"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/repair_addre_out"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@null"
                    android:hint="请输入报修地址"
                    android:textColor="#080604"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/background_underline_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约时间："
                    android:textColor="#686565"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/repair_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:hint="选择预约时间"
                    android:textColor="#080604"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/background_underline_color" />

            <LinearLayout
                android:id="@+id/re_house_info_owner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房间信息："
                    android:textColor="#686565"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/repair_addre_indoor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="选择房间信息"
                    android:textColor="#080604"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/re_house_info_property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房间信息："
                    android:textColor="#686565"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_select_building"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:background="@color/white"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:hint="请选择楼号"
                    android:paddingBottom="@dimen/margin_15dp"
                    android:paddingLeft="@dimen/margin_10dp"
                    android:paddingRight="@dimen/margin_10dp"
                    android:paddingTop="@dimen/margin_15dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_15sp" />

                <TextView
                    android:id="@+id/tv_select_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:background="@color/white"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:hint="请选择单元号"
                    android:paddingBottom="@dimen/margin_15dp"
                    android:paddingLeft="@dimen/margin_10dp"
                    android:paddingRight="@dimen/margin_10dp"
                    android:paddingTop="@dimen/margin_15dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_15sp" />

                <TextView
                    android:id="@+id/tv_select_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:background="@color/white"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:hint="请选择房间号"
                    android:paddingBottom="@dimen/margin_15dp"
                    android:paddingLeft="@dimen/margin_10dp"
                    android:paddingRight="@dimen/margin_10dp"
                    android:paddingTop="@dimen/margin_15dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/background_underline_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/background_underlineview_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/background_underline_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/dp_20"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="报修项目"
                    android:textColor="#080604"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/background_underline_color" />

            <LinearLayout
                android:id="@+id/repair_category_select"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/repair_category_water"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableTop="@drawable/repair_select_water"
                    android:gravity="center"
                    android:text="水"
                    android:textColor="@drawable/repair_select_text"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/repair_category_electric"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableTop="@drawable/repair_select_electric"
                    android:gravity="center"
                    android:text="电"
                    android:textColor="@drawable/repair_select_text"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/repair_category_gas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableTop="@drawable/repair_select_gas"
                    android:gravity="center"
                    android:text="燃气"
                    android:textColor="@drawable/repair_select_text"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/repair_category_lock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableTop="@drawable/repair_select_lock"
                    android:gravity="center"
                    android:text="门锁"
                    android:textColor="@drawable/repair_select_text"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/repair_category_other"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableTop="@drawable/repair_select_other"
                    android:gravity="center"
                    android:text="其他"
                    android:textColor="@drawable/repair_select_text"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/background_underline_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/background_underlineview_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/background_underline_color" />

            <EditText
                android:id="@+id/repair_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@null"
                android:gravity="top"
                android:hint="请输入报修详细信息......"
                android:lineSpacingExtra="10px"
                android:maxLength="120"
                android:textSize="@dimen/sp_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/background_underline_color" />

            <com.ovov.lfzj.base.widget.NoScrollGridView
                android:id="@+id/repair_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:columnWidth="@dimen/dp_5"
                android:gravity="center"
                android:horizontalSpacing="@dimen/dp_5"
                android:numColumns="3"
                android:scrollbars="none" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/background_underline_color" />

            <!--<android.support.design.widget.TabLayout-->
            <!--android:id="@+id/repair_repair_tab"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="120px"-->
            <!--app:tabIndicatorColor="#adf5151c"-->
            <!--app:tabIndicatorHeight="6px"-->
            <!--app:tabMode="scrollable"-->
            <!--app:tabSelectedTextColor="#adf5151c"-->
            <!--app:tabTextAppearance="@style/TabLayoutTextStyle"-->
            <!--app:tabTextColor="#0b0b0b"></android.support.design.widget.TabLayout>-->

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.2dp"-->
            <!--android:background="@color/background_underline_color" />-->

            <!--<android.support.v4.view.ViewPager-->
            <!--android:id="@+id/repair_viewpage"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="820px"-->
            <!--android:layout_marginTop="40px"-->
            <!--android:background="#ffff"></android.support.v4.view.ViewPager>-->

            <TextView
                android:id="@+id/repair_right"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="提交"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingRight="@dimen/dp_10"
                    android:text="致电物业管理中心"
                    android:textColor="#686565"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tv_fee_scale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_15"
                    android:text="维修收费标准"
                    android:textColor="#686565"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
