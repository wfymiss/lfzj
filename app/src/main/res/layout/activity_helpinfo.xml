<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_title"
            style="@style/common_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="title" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@mipmap/nav_icon_back_white" />
        <!--android:src="@mipmap/icon_back" />-->
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="2018-10-18" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_im"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_below="@+id/tv_time"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="@dimen/padding_5dp"
            android:background="@mipmap/ic_default_head" />

        <TextView
            android:id="@+id/user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/user_im"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/user_im"
            android:layout_toRightOf="@+id/user_im"
            android:text="用户id" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_im"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/advice_item_shap">

            <TextView
                android:id="@+id/content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="哈哈哈" />
        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">


        <TextView
            android:id="@+id/tv_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="2018-10-18" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user1_im"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_time1"
            android:layout_marginRight="@dimen/margin_30dp"
            android:layout_marginTop="@dimen/padding_5dp"
            android:background="@mipmap/ic_default_head" />

        <TextView
            android:id="@+id/user1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/user1_im"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:layout_toLeftOf="@+id/user1_im"
            android:layout_toStartOf="@+id/user1_im"
            android:text="用户id" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/user1_im"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/kefu_item_shap">

            <TextView
                android:id="@+id/content1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center" />
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>