<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/list_item_bg"
    android:layout_marginTop="30px"
    android:layout_marginLeft="30px"
    android:layout_marginRight="30px"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_year"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017年"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_month"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:text="06-23 10:35"
            android:textColor="#202020"
            android:textSize="@dimen/sp_13" />
    </RelativeLayout>
    <View
        android:background="@color/background_underline_color"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RelativeLayout
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">
    <TextView
        android:id="@+id/open_door_adree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13栋2单元负一层"
        android:textColor="#202020"
        android:textSize="@dimen/sp_15" />
    <TextView
        android:id="@+id/key_open_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/open_door_adree"
        android:text="蓝牙摇一摇"
        android:textSize="@dimen/sp_15"
        android:textColor="#6b6969"
        android:layout_marginTop="@dimen/dp_10"/>
    <TextView
        android:id="@+id/key_open_result"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="成功"
        android:textSize="@dimen/sp_14"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_alignBottom="@id/key_open_type"
        android:background="@drawable/open_door_cd_bg"
        android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>