<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_title_text"/>
    <LinearLayout
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/hm_pay_type"
            android:textSize="@dimen/sp_15"
            android:textColor="#1b1a1a"
            android:text="支付编号:"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/hm_pay_num"
            android:textSize="@dimen/sp_15"
            android:textColor="#1b1a1a"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/background_underline_color"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:background="#FFFFFF"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="#1b1a1a"
            android:text="支付服务:"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/hm_pay_title"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/background_underline_color"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:background="#FFFFFF"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="#1b1a1a"
            android:text="支付费用:"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/hm_pay_cost"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/colorPrimary"
            android:text="￥ 0.00 "
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_13sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/colorPrimary"
        android:text="*如需要发票，请在本月月底之前至物业收费办公室领取"/>
    <TextView
        android:id="@+id/hm_pay_commit"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="确认支付"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_15"/>
</LinearLayout>
