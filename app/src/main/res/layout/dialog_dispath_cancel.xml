<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/padding_15dp"
        android:paddingTop="@dimen/padding_15dp"
        android:text="取消工单的理由"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_2dp"
        android:background="@color/colorPrimary" />



    <EditText
        android:id="@+id/et_mark"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/color_ffffff"
        android:gravity="top"
        android:hint="备注"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:textColor="@color/color_444444"
        android:textSize="@dimen/sp_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1dp"
        android:background="@color/color_dcdcdc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            android:gravity="center"
            android:text="@string/common_cancel"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/textSize_15sp" />

        <View
            android:layout_width="@dimen/margin_1dp"
            android:layout_height="match_parent"
            android:background="@color/color_dcdcdc" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            android:text="确认"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/textSize_15sp" />
    </LinearLayout>
</LinearLayout>