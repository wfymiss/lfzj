<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/rectangular"

        android:padding="@dimen/padding_20dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_14sp"
            android:text="" />
        <TextView
            android:id="@+id/tv_title_numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_title"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/padding_12dp"
            android:maxLength="8"
            android:layout_marginLeft="@dimen/margin_10dp"

            android:text="" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:textSize="@dimen/padding_12dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="" />

        <TextView
            android:id="@+id/job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/padding_12dp"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="" />


        <TextView
            android:id="@+id/tv_reciver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="@dimen/padding_5dp"
            android:textSize="@dimen/padding_12dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_toRightOf="@+id/job_name"
            android:text="" />

        <TextView
            android:id="@+id/version_numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/padding_12dp"
            android:layout_below="@id/tv_reciver"
            android:layout_marginTop="9dp"
            android:text="" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_system_detail"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:textSize="@dimen/padding_12dp"
            android:layout_marginTop="9dp"
            android:maxLength="10"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/version_numb"
            android:text="" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_time"
            android:layout_marginTop="19dp"
            android:src="@mipmap/greenarr" />


    </RelativeLayout>
</LinearLayout>