<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/list_item_bg"
    android:layout_marginTop="30px"
    android:layout_marginLeft="40px"
    android:layout_marginRight="40px"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/key_list_name"
            android:text="钥匙名称"
            android:textColor="#202020"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/key_list_type"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_below="@id/key_list_name"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/lock_type_blue"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25" />
            <TextView
                android:textColor="#2d2c2c"
                android:textSize="@dimen/sp_14"
                android:text="蓝牙/摇一摇"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/lock_type_qr"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25" />
            <TextView
                android:textColor="#2d2c2c"
                android:textSize="@dimen/sp_14"
                android:text="扫描二维码"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/distribute_time"
            android:text="2017-08-01"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_below="@id/key_list_type"
            android:textSize="@dimen/sp_14"
            android:textColor="#c4c3c3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/key_list_key"
            android:textSize="@dimen/sp_13"
            android:layout_below="@id/distribute_time"
            android:visibility="invisible"
            android:text="@string/common_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>