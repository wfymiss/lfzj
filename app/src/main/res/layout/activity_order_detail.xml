<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ovov.lfzj.market.order.OrderDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/left"
            android:drawablePadding="@dimen/dp_14"
            android:text="我的订单"
            android:textColor="@color/white"
            android:textSize="19sp" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_7dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/payok" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp">

                <ImageView
                    android:id="@+id/im_location"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="@dimen/margin_10dp"
                    android:background="@mipmap/location" />


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/im_location"
                    android:text="@string/text_name"
                    android:textColor="@color/color_444444"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_13dp"
                    android:layout_toRightOf="@+id/tv_name"
                    android:text="186666666666"
                    android:textColor="@color/color_text_a1a1a1"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="@dimen/margin_12dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="@dimen/margin_12dp"
                    android:layout_toRightOf="@+id/im_location"
                    android:text="山西省 晋中市 榆次区 西南街道 思凤街568号南
苑新区，19号楼五单元201室"
                    android:textColor="@color/color_444444"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_10dp"
                android:background="@color/background_underlineview_color" />


            <TextView
                style="@style/order_text_size"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:drawableLeft="@mipmap/small_shop"
                android:drawablePadding="@dimen/dp_11"
                android:drawableRight="@mipmap/than"
                android:gravity="center_vertical"
                android:text="我的店铺名称" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="9dp"
                    android:background="@mipmap/ic_launcher"
                    android:scaleType="centerCrop" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp">

                    <TextView
                        android:id="@+id/tv_order_detail"
                        style="@style/detail_text_size"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text="指纹密码锁智能锁物联 Wulian 智能家居 南京物联指纹锁"
                        android:textColor="@color/color_444444" />

                    <TextView
                        android:id="@+id/tv_order_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:layout_toRightOf="@+id/tv_order_detail"
                        android:text="￥2388.00"
                        android:textColor="@color/color_444444" />

                    <TextView
                        style="@style/detail_text_size"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_order_pay"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:text="x 1" />


                    <TextView
                        android:id="@+id/tv_order_type"
                        style="@style/detail_text_size"
                        android:layout_below="@+id/tv_order_detail"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:text="太空铝雅白"
                        android:textColor="#A1A1A1" />


                    <TextView
                        style="@style/detail_text_size"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_order_type"
                        android:layout_marginBottom="@dimen/padding_14dp"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:layout_marginTop="22dp"
                        android:text="申请售后"
                        android:textColor="@color/color_444444" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background_underlineview_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_marginTop="17dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_shop_price" />

                <TextView
                    android:id="@+id/tv_done_price"
                    style="@style/detail_text_size"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:text="￥2388.00" />

                <TextView
                    android:id="@+id/tv_unitiy_numb"
                    style="@style/detail_text_size"
                    android:layout_below="@+id/tv_order_price"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/text_unitiy" />

                <TextView
                    android:id="@+id/tv_order_unity"
                    style="@style/detail_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_done_price"
                    android:layout_marginTop="19dp"
                    android:text="￥0.00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_unitiy_numb"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="@string/text_price_numb"
                    android:textColor="@color/color_444444"
                    android:layout_marginBottom="@dimen/margin_6dp"
                    android:textSize="@dimen/sp_15" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_order_unity"
                    android:layout_marginTop="17dp"
                    android:singleLine="true"
                    android:text="￥2388.00"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background_underlineview_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_marginTop="17dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_pay_detail"
                    style="@style/detail_text_size"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:text="@string/text_pay_detail" />

                <TextView
                    android:id="@+id/tv_discount"
                    style="@style/detail_text_size"
                    android:layout_below="@+id/tv_pay_detail"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/text_real_pay"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_discount_unity"
                    style="@style/detail_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_pay_detail"
                    android:layout_marginTop="19dp"
                    android:text="-￥300.00" />

                <TextView
                    android:id="@+id/tv_real_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_discount"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="@string/text_price_numb"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_discount_unity"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:layout_marginTop="17dp"
                    android:singleLine="true"
                    android:text="￥2388.00"
                    android:textColor="@color/color_red"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_10dp"
                android:background="@color/background_underlineview_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text="@string/text_order_detail"
                    android:textColor="@color/color_444444"
                    android:textSize="@dimen/sp_15" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">

                    <TextView
                        style="@style/detail_text_size"
                        android:text="@string/text_order_numb" />

                    <TextView
                        style="@style/detail_text_size"
                        android:layout_marginLeft="46dp"
                        android:text="5242362324423" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">

                    <TextView
                        style="@style/detail_text_size"
                        android:text="@string/text_create_time" />

                    <TextView
                        style="@style/detail_text_size"
                        android:layout_marginLeft="46dp"
                        android:text="5242362324423" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">

                    <TextView
                        style="@style/detail_text_size"
                        android:text="@string/text_pay_time" />

                    <TextView
                        style="@style/detail_text_size"
                        android:layout_marginLeft="46dp"
                        android:text="5242362324423" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">

                    <TextView
                        style="@style/detail_text_size"
                        android:text="@string/text_paydone_time" />

                    <TextView
                        style="@style/detail_text_size"
                        android:layout_marginLeft="46dp"
                        android:text="5242362324423" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">

                    <TextView
                        style="@style/detail_text_size"
                        android:text="@string/text_pay_way" />

                    <TextView
                        style="@style/detail_text_size"
                        android:layout_marginLeft="46dp"
                        android:text="支付宝" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
