<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/repair_room_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <include layout="@layout/include_title_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_repair_bg" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_bg"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/RepairTitleStyle"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_family"
                    android:text="家庭区域" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/RepairTitleStyle"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:id="@+id/tv_common"
                    android:textColor="@color/colorPrimary"
                    android:text="公共设施" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_repair_name"
                        style="@style/RepairItemStyle"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:maxLength="10"
                        android:hint="@string/text_repair_name_hint"
                        android:background="@color/transparent"
                        android:id="@+id/et_name"
                        android:textColor="@color/color_444444"
                        android:inputType="text"
                        android:textSize="@dimen/textSize_15sp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/shape_repair_dash"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_repair_phone"
                        style="@style/RepairItemStyle"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:maxLength="20"
                        android:inputType="phone"
                        android:id="@+id/et_phone"
                        android:hint="@string/text_repair_phone_hint"
                        android:background="@color/transparent"
                        android:textColor="@color/color_444444"
                        android:textSize="@dimen/textSize_15sp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/shape_repair_dash"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_repair_location"
                        style="@style/RepairItemStyle"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:maxLength="20"
                        android:inputType="text"
                        android:id="@+id/et_location"
                        android:hint="@string/text_repair_location_hint_common"
                        android:background="@color/transparent"
                        android:textColor="@color/color_444444"
                        android:textSize="@dimen/textSize_15sp"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:id="@+id/tv_location"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_height="wrap_content"
                        android:hint="@string/text_repair_location_hint_family"
                        style="@style/RepairItemStyle"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/shape_repair_dash"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/re_repair_item"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="@color/common_bg"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/RepairItemStyle"
                        android:text="报修项目"/>
                    <LinearLayout
                        android:id="@+id/repair_category_select"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/repair_category_water"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@drawable/repair_select_water"
                            android:gravity="center"
                            android:text="水"
                            android:textColor="@drawable/repair_select_text"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/repair_category_electric"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@drawable/repair_select_electric"
                            android:gravity="center"
                            android:text="电"
                            android:textColor="@drawable/repair_select_text"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/repair_category_gas"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@drawable/repair_select_gas"
                            android:gravity="center"
                            android:text="燃气"
                            android:textColor="@drawable/repair_select_text"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/repair_category_hot"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@drawable/repair_select_lock"
                            android:gravity="center"
                            android:text="暖"
                            android:textColor="@drawable/repair_select_text"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/repair_category_other"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@drawable/repair_select_other"
                            android:gravity="center"
                            android:text="其他"
                            android:textColor="@drawable/repair_select_text"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"

                        android:background="@color/common_bg"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_repair_content"
                        android:id="@+id/tv_repair_content"
                        style="@style/RepairItemStyle"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="@dimen/dp_10"
                        android:gravity="left|top"
                        android:id="@+id/et_content"
                        android:layout_below="@+id/tv_repair_content"
                        android:hint="@string/text_repair_content_hint"
                        android:background="@color/transparent"
                        android:textColor="@color/color_444444"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:textSize="@dimen/textSize_15sp"
                        android:layout_gravity="center_vertical"/>
                </RelativeLayout>
                <com.ovov.lfzj.base.widget.NoScrollGridView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:horizontalSpacing="@dimen/padding_5dp"
                    android:verticalSpacing="@dimen/padding_5dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:id="@+id/gridView"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_price"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_444444"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_gravity="center_horizontal"
                android:text="参考价格"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/text_make_order"
                android:textSize="@dimen/textSize_15sp"
                android:textColor="@color/color_ffffff"
                android:gravity="center"
                android:id="@+id/tv_commit"
                android:background="@drawable/shape_next_text"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginBottom="28dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
