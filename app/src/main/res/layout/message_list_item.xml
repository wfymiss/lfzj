<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10dp"
    android:background="@drawable/shape_item">


    <ImageView
        android:id="@+id/bbs_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15" />


    <TextView
        android:id="@+id/iv_bbs"
        style="@style/message_item_text"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_toRightOf="@+id/bbs_im"
        android:text="论坛消息" />

    <TextView
        android:id="@+id/tv_comment"
        style="@style/bbs_item_text"
        android:layout_below="@+id/iv_bbs"
        android:layout_marginBottom="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toRightOf="@+id/bbs_im"
        android:ellipsize="end"
        android:maxLength="10"
        android:maxLines="1"
        android:text="在南昌西湖区南站街道洛阳" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/bbs_item_text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="@dimen/dp_10"
        android:text="09-11   9:20" />

    <TextView
        style="@style/bbs_item_index"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_time"
        android:layout_marginRight="28dp"
        android:layout_marginTop="@dimen/dp_15"
        android:text="有新回复" />

</RelativeLayout>