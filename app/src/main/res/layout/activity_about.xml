<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ovov.lfzj.user.setting.AboutActivity">

    <include layout="@layout/include_title_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"
                android:layout_marginTop="@dimen/dp_50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/textSize_18sp"
                android:layout_marginTop="@dimen/dp_20"
                android:textColor="@color/color_999999"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:id="@+id/tv_version"
                android:text="当前版本（3.2.8）"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_8"/>
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:src="@mipmap/ic_net"
                android:layout_marginTop="83dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.catel-link.com"
                android:textColor="#7a7a7a"
                android:textSize="@dimen/textSize_18sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_8"/>
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:src="@mipmap/ic_mail"
                android:layout_marginTop="55dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chief-dir@catel.cc"
                android:textColor="#7a7a7a"
                android:textSize="@dimen/textSize_18sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_8"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="山西凯特联众网络科技股份有限公司"
                android:textColor="#666666"
                android:textSize="@dimen/sp_13"
                android:layout_marginBottom="@dimen/dp_50"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_100"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
