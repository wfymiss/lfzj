<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:src="@mipmap/ic_splash"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:id="@+id/iv_activity"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_333333"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/tv_title"
            android:layout_marginRight="@dimen/dp_15"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/iv_activity"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥20"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_below="@+id/tv_title"
            android:drawablePadding="@dimen/dp_5"
            android:id="@+id/tv_price"
            android:layout_toRightOf="@+id/iv_activity"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_activity_starttime"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_333333"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_below="@+id/tv_price"
            android:id="@+id/tv_time"
            android:layout_toRightOf="@+id/iv_activity"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_encroll_num"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_f49d32"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_below="@+id/tv_price"
            android:id="@+id/tv_enroll_num" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:id="@+id/view"
        android:background="@color/common_bg"
        android:layout_marginTop="@dimen/dp_15"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:id="@+id/lin_foot"
        android:orientation="horizontal">
        <TextView
            android:layout_width="42dp"
            android:layout_height="22dp"
            android:text="官方"
            android:id="@+id/tv_offical"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_ffffff"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@drawable/shape_offical"
            android:gravity="center"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            android:text="@string/text_enroll" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textColor="@color/color_f49d32"
            android:textSize="@dimen/sp_14"
            android:id="@+id/tv_enroll"
            android:layout_marginLeft="@dimen/dp_5"/>

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_20dp"
            android:text="@string/text_good"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textColor="@color/color_f49d32"
            android:textSize="@dimen/sp_14"
            android:drawableLeft="@mipmap/ic_good"
            android:drawablePadding="@dimen/dp_5"
            android:id="@+id/tv_good"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"/>
    </LinearLayout>
</LinearLayout>