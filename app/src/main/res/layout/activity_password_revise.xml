<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_view"
    android:orientation="vertical">

    <include layout="@layout/include_title_text" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30px"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/old_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:text="原密码 ："
            android:textColor="#000000"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/old_login_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:inputType="textPassword"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/old_password"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入原密码"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/background_underline_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="新密码 ："
            android:textColor="#000000"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/new_login_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/new_password"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:hint="请输入新密码"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/background_underline_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/next_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="确认新密码 ："
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/next_login_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/next_password"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请确认新密码"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30px"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/password_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="手机号 ："
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/password_login_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_marginRight="40px"
            android:layout_toLeftOf="@+id/achieve_code"
            android:layout_toRightOf="@id/password_phone"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/achieve_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            android:gravity="center_vertical"
            android:text="获取验证码"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/background_underline_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/verify_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="验证码 ："
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/input_verify_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/verify_code"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/feed_ground_button"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_15dp"
        android:paddingTop="@dimen/padding_15dp"
        android:text="确认修改"
        android:textColor="#ffffff"
        android:textSize="15sp" />
</LinearLayout>
