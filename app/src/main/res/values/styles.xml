<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyCommunityStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NeighbourTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>
    <!-- 深色下划线 -->
    <style name="DeepUnderLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#e5e5e5</item>
    </style>
    <!--邀请访客生成二维码,成功弹出框dialog样式（认证、邀请家人、提交工单、活动报名、）,删除弹框-->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item> <!--是否浮现在activity之上-->
    </style>
    <style name="Dialog_Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--生成访客通行二维码页文本输入框属性-->
    <style name="AppTheme.EditText.Big" parent="Widget.AppCompat.EditText">
    <item name="android:drawablePadding">@dimen/margin_6dp</item>
    <item name="android:paddingLeft">@dimen/margin_6dp</item>
    <item name="android:paddingRight">@dimen/margin_6dp</item>
    <item name="android:textSize">15dp</item>
    <item name="android:textColorHint">#bb9a82</item>
    <item name="android:singleLine">true</item>
    <item name="android:background">#ffffff</item>
    </style>
    <!--popupWindow弹出动画样式-->
    <style name="mypopupwindow_anim_style">
        <!--显示的动画-->
        <item name="android:windowEnterAnimation">@anim/popup_enter_up</item>
        <!--消失的动画-->
        <item name="android:windowExitAnimation">@anim/popup__out_down</item>
    </style>

    <style name="text_mine_size">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_444444</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginRight">22dp</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@mipmap/arrows</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="order_text_size">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_12sp</item>
        <item name="android:textColor">@color/color_444444</item>
    </style>
    <style name="detail_text_size">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_12sp</item>

    </style>

    <style name="myText">
    <item name="android:textSize">16dp</item>
    <item name="android:textColor">#000000</item>
    </style>


    <style name="bbs_item_text">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_828282</item>
    </style>
    <style name="bbs_item_index">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blu</item>
    </style>

    <style name="message_item_text">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_444444</item>
    </style>

    <style name="message_item_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:background">@drawable/shape_item</item>
    </style>
</resources>
