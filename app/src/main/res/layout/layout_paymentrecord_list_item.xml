<?xml version="1.0" encoding="utf-8"?>
<!--业主版缴费账单—item-->
<RelativeLayout
    android:background="#FFFFFF"
    android:layout_marginTop="30px"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="38px"
    android:layout_width="match_parent"
    android:id="@+id/re_container"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/payment_title_rel"
        android:layout_marginTop="38px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/payment_line_icon"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_20"/>
        <TextView
            android:id="@+id/payment_title"
            android:text="物业费"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_333333"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/payment_line_icon"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/payment_bill"
            android:text="0.0"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:id="@+id/payment_line"
        android:layout_below="@+id/payment_title_rel"
        android:background="@color/background_underline_color"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>

    <RelativeLayout
        android:layout_below="@+id/payment_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/payment_sel_img_rel"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_100">
            <ImageView
                android:id="@+id/payment_sel_img"
                android:src="@drawable/nava_pay_select"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_width="22dp"
                android:layout_height="22dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@id/payment_sel_img_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pay_obj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收费对象:"
                android:textSize="@dimen/sp_15"
                android:textColor="#acaaaa"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"/>
            <TextView
                android:id="@+id/payment_obj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="#acaaaa"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@+id/pay_obj"/>
            <TextView
                android:id="@+id/payment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-8-20"
                android:textSize="@dimen/sp_15"
                android:textColor="#acaaaa"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@+id/pay_time"
                android:layout_below="@+id/payment_obj"/>
            <TextView
                android:id="@+id/pay_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间:"
                android:textSize="@dimen/sp_15"
                android:textColor="#acaaaa"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@+id/pay_obj"/>
            <TextView
                android:id="@+id/pay_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="截止日期:"
                android:textSize="@dimen/sp_15"
                android:textColor="#acaaaa"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@+id/pay_time"/>
            <TextView
                android:id="@+id/payment_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-8-20"
                android:textSize="@dimen/sp_15"
                android:textColor="#acaaaa"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@+id/pay_endtime"
                android:layout_below="@+id/pay_time"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>