<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@mipmap/ic_opendoor_back"
    tools:context="com.ovov.lfzj.opendoor.OpendoorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon_setting"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_16"
            android:src="@mipmap/ic_setting" />
        <TextView
            android:id="@+id/open_door_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_14"
            android:text="乐福智家"
            android:textColor="#ffffff"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/icon_finish"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_16"
            android:src="@mipmap/ic_close" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/icon_result"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/icon_sucess"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/open_top"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:src="@mipmap/ic_opendoor_top" />
        <ImageView
            android:id="@+id/open_bottom"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:src="@mipmap/ic_opendoor_bottom" />
    </LinearLayout>
    <ImageView
        android:id="@+id/opendoor_anim"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:src="@mipmap/ic_opendoor_anim" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/re_scan"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_scan"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_scan" />
            <TextView
                android:id="@+id/tv_open_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_scan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50px"
                android:text="扫码开门"
                android:textColor="#ffffff"
                android:textSize="13sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/re_code"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_code"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_open_qrcode" />
            <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_code"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50px"
                android:text="二维码开门"
                android:textColor="#ffffff"
                android:textSize="13sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/re_apply_key"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_apply_key"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_new_key" />
            <TextView
                android:id="@+id/tv_apply_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_apply_key"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50px"
                android:text="钥匙列表"
                android:textColor="#ffffff"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>